# App Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=ACIMS - Canteen Management System

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/acims
# For MongoDB Atlas, use:
# MONGODB_URI=mongodb+srv://<username>:<password>@cluster.mongodb.net/acims?retryWrites=true&w=majority
MONGODB_DB_NAME=acims

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379
# For cloud Redis (Upstash, Redis Labs):
# REDIS_URL=redis://default:password@host:port

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-change-this-in-production-min-32-chars
JWT_SECRET=your-jwt-secret-change-this-in-production

# External API Integrations
# HRMS Integration
HRMS_PERMANENT_API_URL=https://hrms-permanent.example.com/api
HRMS_PERMANENT_API_KEY=your-permanent-hrms-api-key
HRMS_VENDOR_API_URL=https://hrms-vendor.example.com/api
HRMS_VENDOR_API_KEY=your-vendor-hrms-api-key

# Biometric Device Integration
BIOMETRIC_API_URL=https://biometric.example.com/api
BIOMETRIC_API_KEY=your-biometric-api-key
BIOMETRIC_SYNC_INTERVAL=15 # minutes

# Email Service (Resend)
RESEND_API_KEY=re_your_resend_api_key
EMAIL_FROM=noreply@acims.com
EMAIL_FROM_NAME=ACIMS Notifications

# File Storage (AWS S3)
AWS_S3_BUCKET=acims-storage
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
NEXT_PUBLIC_S3_BASE_URL=https://acims-storage.s3.amazonaws.com

# SMS Service (Optional - Twilio)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Real-time Updates (Socket.io or Pusher)
# For Pusher:
PUSHER_APP_ID=your-pusher-app-id
PUSHER_KEY=your-pusher-key
PUSHER_SECRET=your-pusher-secret
PUSHER_CLUSTER=ap2
NEXT_PUBLIC_PUSHER_KEY=your-pusher-key
NEXT_PUBLIC_PUSHER_CLUSTER=ap2

# Error Tracking (Sentry - Optional)
SENTRY_DSN=your-sentry-dsn
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn

# Application Settings
MEAL_VERIFICATION_TIMEOUT=500 # milliseconds
LOW_STOCK_CHECK_INTERVAL=60 # minutes
ATTENDANCE_SYNC_INTERVAL=15 # minutes
FACE_VERIFICATION_CONFIDENCE_THRESHOLD=85 # percentage
SESSION_TIMEOUT=1800 # 30 minutes in seconds

# Feature Flags
ENABLE_SMS_NOTIFICATIONS=false
ENABLE_BIOMETRIC_SYNC=true
ENABLE_AUTO_DEMAND_GENERATION=true
ENABLE_REAL_TIME_UPDATES=true
